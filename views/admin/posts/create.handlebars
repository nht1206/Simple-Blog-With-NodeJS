<h1>Create Post</h1>

<form action="/admin/posts" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <input required name="title" type="text" class="form-control" id="title" placeholder="Enter title" >
    </div>

    <div class="form-group">
        <label for="file">File Upload</label>
        <input type="file" name="file" class="form-control" >
    </div>

    <div class="form-group">
        <label for="status">Category</label>
        <select required name="category" id="status" class="form-control">


            {{#each categories}}

            <option value="{{id}}">{{name}}</option>

            {{/each}}

        </select>
    </div>


    <div class="form-group">
        <label for="status">Status</label>
        <select required name="status" id="status" class="form-control">
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
        </select>
    </div>



    <div class="form-check">
        <label for="allowComments" class="form-check-label">
            Allow Comments
            <input name="allowComments" type="checkbox" class="form-check-input" id="allowComments">
        </label>
    </div>

    <div class="form-group">
        <label for="body">Body</label>
        <textarea required name="body" cols="30" rows="10" class="form-control" id="body" placeholder="Enter Description"></textarea>
    </div>


    <button type="submit" class="btn btn-primary">Create Post</button>


</form>